class Solution {
    public String truncateSentence(String s, int k) {
        StringBuilder sb=new StringBuilder();
        String arr[]=s.split(" ");
        for(int i=0; i<k; i++){
            if(i<arr.length){
                sb.append(arr[i]).append(" ");
            }
        } 
        return sb.toString().trim();
    }
}
